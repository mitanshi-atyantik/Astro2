---
import Button from "./Button.astro"

const { url, btn } = Astro.props
---

<div class="relative w-full h-screen overflow-hidden flex items-center justify-center">
  <video autoplay muted playsinline loop class="absolute top-0 left-0 w-full h-full object-cover">
    <source src={url} type="video/mp4">
    Your browser does not support the video tag.
  </video>
  {btn && (
    <div class="relative z-10 flex gap-2.5 items-center">

      <a href="#" class=" text-sm no-underline hover:text-white hover:cursor-pointer text-[#978544] bg-white rounded-full py-2 px-4 uppercase transition-opacity duration-300 hover:opacity-100 hover:bg-[#978544]">Enter Luxe Global Awards</a>

        <a href="#" class=" text-sm no-underline hover:text-white hover:cursor-pointer text-[#978544] bg-white  rounded-full py-2 px-4 uppercase transition-opacity duration-300 hover:opacity-100 hover:bg-[#978544]">Explore Travel Destinations</a>
  
  
</div>

  

  )}
</div>

<style>
  @media (max-width: 768px) {
    .button-container button {
      @apply text-sm px-3 py-2;
    }
  }

  @media (max-width: 480px) {
    .button-container {
      @apply flex-col gap-1;
    }
    .button-container button {
      @apply text-xs px-3 py-1;
    }
  }
</style>
