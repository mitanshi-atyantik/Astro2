          <label class="flex items-center text-gray-500 text-sm">
            <input type="radio" name="payment" value="paypal" class="mr-2">
            <span>Credit Card</span>
          </label>
        </div>
      </div>

      <!-- Second Column: Coupon Input and Cart Total Card -->
      <div class="lg:w-1/2 mt-28 flex flex-col justify-center ">
        <!-- Coupon Input -->
        <div>
          <label for="coupon" class="block text-lg font-medium mb-2 uppercase">Have a coupon?</label>
          <input
              type="text"
              id="coupon"
              class="w-full border-b border-black bg-transparent text-lg mb-5 focus:outline-none"
            />
        </div>
        <button class="continue-button bg-[black]  text-[white] mb-6 border-[none] px-10 uppercase py-[10px] text-[16px] cursor-pointer rounded-[25px] [transition:background-color_0.3s_ease] hover:bg-[white] hover:text-[black] hover:border-[1px] hover:border-[solid] hover:border-[black]">Apply</button>

        <!-- Cart Total Card -->
        <div class="bg-gray-200  rounded-md shadow-sm p-10">
          <h2 class="text-lg font-semibold mb-4 uppercase">Cart Total</h2>
          <div class="space-y-2">
            <div class="flex justify-between border-b border-gray-500 py-3">
              <span class="text-sm uppercase text-gray-500">Subtotal</span>
              <span>€999</span>
            </div>
            <div class="flex justify-between border-b border-gray-500 py-3">
              <span class="text-sm uppercase text-gray-500">Discount</span>
              <span>-€10.00</span>
            </div>
            <div class="flex justify-between  py-3">
              <span class="text-sm uppercase text-gray-500">Total</span>
              <span>€90.00</span>
            </div>
          </div>
        </div>
      </div>
